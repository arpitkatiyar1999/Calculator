<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:layout_height="match_parent"
    android:background="#1a1a1a"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></LinearLayout>
    <TextView
        android:padding="10dp"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="40sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="right|bottom"
        android:textColor="@color/white"
        android:layout_weight="1.2"></TextView>
    <TextView
        android:id="@+id/tv_result"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="30sp"
        android:paddingRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:gravity="top|right"
        android:text="=0"
        android:layout_weight=".5"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="5"
        android:background="@color/background"
        android:layout_weight="1.3">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:weightSum="4"
            android:layout_weight="1">
            <TextView
                android:text="CLR"
                android:onClick="clearAll"
                style="@style/number_text_style"></TextView>
            <ImageView
                android:src="@drawable/back"
                android:scaleType="center"
                android:onClick="clearOne"
                style="@style/number_text_style"></ImageView>
            <TextView
                android:text="("
                android:onClick="brackets"
                style="@style/number_text_style"></TextView>
            <TextView
                android:text=")"
                android:onClick="brackets"
                style="@style/number_text_style"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:weightSum="4"
            android:layout_weight="1">
            <TextView
                android:text="7"
                android:onClick="showView"
                style="@style/number_text_style"></TextView>
            <TextView
                android:text="8"
                android:onClick="showView"
                style="@style/number_text_style"></TextView>
            <TextView
                android:text="9"
                android:onClick="showView"
                style="@style/number_text_style"></TextView>
            <TextView
                android:text="/"
                android:onClick="operator"
                style="@style/number_text_style"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:weightSum="4"
            android:layout_weight="1">
            <TextView
                android:text="4"
                android:onClick="showView"
                style="@style/number_text_style"></TextView>
            <TextView
                android:text="5"
                android:onClick="showView"
                style="@style/number_text_style"></TextView>
            <TextView
                android:text="6"
                android:onClick="showView"
                style="@style/number_text_style"></TextView>
            <TextView
                android:text="*"
                android:onClick="operator"
                style="@style/number_text_style"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:weightSum="4"
            android:layout_weight="1">
            <TextView
                android:text="1"
                android:onClick="showView"
                style="@style/number_text_style"></TextView>
            <TextView
                android:text="2"
                android:onClick="showView"
                style="@style/number_text_style"></TextView>
            <TextView
                android:text="3"
                android:onClick="showView"
                style="@style/number_text_style"></TextView>
            <TextView
                android:text="+"
                android:onClick="operator"
                style="@style/number_text_style"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="0dp"
            android:weightSum="4"
            android:layout_weight="1">
            <TextView
                android:text="."
                android:textStyle="bold"
                android:onClick="dot"
                style="@style/number_text_style"></TextView>
            <TextView
                android:text="0"
                android:onClick="showView"
                style="@style/number_text_style"></TextView>
            <TextView
                android:text="="
                android:onClick="equal"
                android:textStyle="bold"
                android:background="@drawable/equal_background"
                style="@style/number_text_style"></TextView>
            <TextView
                android:text="-"
                android:onClick="operator"
                android:textStyle="bold"
                style="@style/number_text_style"></TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>